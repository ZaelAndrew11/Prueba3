<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.aguzman.prueba3.views.AddTaleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin">

        <EditText
            android:id="@+id/titleTalesEt"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:hint="Titulo"
            android:inputType="text"
            android:padding="@dimen/appbar_padding_top" />

        <EditText
            android:id="@+id/descriptionTaleEt"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:gravity="top"
            android:hint="CuÃ©ntanos tu historia"
            android:padding="@dimen/appbar_padding_top" />

        <ImageView
            android:id="@+id/imagePreviewIv"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <Button
            android:id="@+id/selectImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/fab_margin"
            android:text="Selecciona una Imagen"
            android:drawableRight="@mipmap/ic_add_to_photos_white_24dp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/saveTaleBtn"
            android:text="Guardar"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:drawableRight="@mipmap/ic_save_white_24dp"
            android:padding="@dimen/fab_margin"/>
    </LinearLayout>

</ScrollView>
